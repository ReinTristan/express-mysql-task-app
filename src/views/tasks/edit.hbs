<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-body ">
                    <form action="/tasks/edit/{{task.id}}" method="POST">
                        <div class="mb-3">
                            <input type="text" value="{{task.task}}" class="form-control" name="task" placeholder="Nombre de la tarea" autofocus>
                        </div>
                        <div class="mb-3">
                            <textarea  class="form-control" name="description" rows="2" placeholder="DescripciÃ³n">{{task.description}}</textarea>
                        </div>
                        <div class="mb-3">
                            <input type="datetime-local" value="{{task.beforeHour}}" class="form-control" name="beforeHour" placeholder="Fecha De entrega">
                        </div>
                        <div class="mb-3">
                            <input list="priorities" value="{{task.priority}}" class="form-control" name="priority" placeholder="Prioridad">
                            <datalist id="priorities" >
                                <option value="Alta"></option>
                                <option value="Normal"></option>
                                <option value="Baja"></option>
                            </datalist>
                        </div>
                        <div class="d-grid gap-2">
                            <button class="btn btn-success">Save</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>